<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AutorizacaoFilter</filter-name>
        <filter-class>bt.senac.conexaobd.filter.AutorizacaoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutorizacaoFilter</filter-name>
        <url-pattern>/protegido/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>br.senac.conexaobd.servlet.ClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroClienteServlet</servlet-name>
        <servlet-class>br.senac.servlet.CadastroClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarClienteServlet</servlet-name>
        <servlet-class>br.senac.servlet.ListarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroFuncionarioServlet</servlet-name>
        <servlet-class>br.senac.servlet.CadastroFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarFuncionarioServlet</servlet-name>
        <servlet-class>br.senac.servlet.ListarFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroProdutoServlet</servlet-name>
        <servlet-class>br.senac.servlet.CadastroProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarProdutoServlet</servlet-name>
        <servlet-class>br.senac.servlet.ListarProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendaServlet</servlet-name>
        <servlet-class>br.senac.servlet.VendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.senac.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarClienteServlet</servlet-name>
        <url-pattern>/cliente/ListarClienteServlet</url-pattern>
        <url-pattern>/protegido/cliente/ListarClienteServlet</url-pattern>       
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroFuncionarioServlet</servlet-name>
        <url-pattern>/funcionario/CadastroFuncionarioServlet</url-pattern>
         <url-pattern>/protegido/funcionario/CadastroFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarFuncionarioServlet</servlet-name>
        <url-pattern>/funcionario/ListarFuncionarioServlet</url-pattern>
        <url-pattern>/protegido/funcionario/ListarFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroProdutoServlet</servlet-name>
        <url-pattern>/produto/CadastroProdutoServlet</url-pattern>
        <url-pattern>/protegido/produto/CadastroProdutoServlet</url-pattern>
     
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarProdutoServlet</servlet-name>
        <url-pattern>/produto/ListarProdutoServlet</url-pattern>
        <url-pattern>/protegido/produto/ListarProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendaServlet</servlet-name>
        <url-pattern>/venda/VendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroClienteServlet</servlet-name>
        <url-pattern>/cliente/CadastroClienteServlet</url-pattern>
        <url-pattern>/protegido/cliente/CadastroClienteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>protegido/uteis/header.jsp</welcome-file>
        <welcome-file>uteis/header.jsp</welcome-file>
    </welcome-file-list>
</web-app>
